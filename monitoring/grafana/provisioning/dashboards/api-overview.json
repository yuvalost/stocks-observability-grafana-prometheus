{
  "title": "API Overview",
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "Requests/sec",
      "targets": [{ "expr": "sum(rate(http_requests_total[5m])) by (method, code)", "legendFormat": "{{method}} {{code}}" }],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "p95 Latency (s)",
      "targets": [{ "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))" }],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Error Rate",
      "targets": [{ "expr": "job:http_error_rate", "legendFormat": "{{job}}" }],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Probe Status (Frontend/API)",
      "targets": [{ "expr": "avg(probe_success)" }],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
    }
  ],
  "time": { "from": "now-24h", "to": "now" }
}
